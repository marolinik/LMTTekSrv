# Database Connection
# Local Development: Use Docker PostgreSQL
# Production (Render): Auto-set by DATABASE_URL from database service
DATABASE_URL="postgresql://username:password@localhost:5432/lmtek_configurator?schema=public"

# JWT Authentication
# Development: Use any secret (min 32 characters)
# Production (Render): Auto-generated by Render (generateValue: true in render.yaml)
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS - Allowed Origins (comma-separated)
# Development: Local development servers
# Production: Add your Render frontend URL
# Example: "https://lmtek-frontend.onrender.com,https://www.yourdomain.com"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Admin Credentials (Initial Setup)
# IMPORTANT: Change ADMIN_PASSWORD in production!
# Use strong password generator: openssl rand -base64 32
ADMIN_EMAIL="admin@lmtek.com"
ADMIN_PASSWORD="CHANGE-THIS-IN-PRODUCTION"
ADMIN_NAME="System Administrator"
